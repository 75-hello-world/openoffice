#: 06090000.xhp#par_id3147530.30.help.text
msgid ""
"<ahelp hid=\"SW:CHECKBOX:DLG_CONV_TEXT_TABLE:CB_DONT_SPLIT\">Does not divide "
"the table across pages.</ahelp>"
msgstr ""
"<ahelp hid=\"SW:CHECKBOX:DLG_CONV_TEXT_TABLE:CB_DONT_SPLIT\">Không chia bảng "
"qua nhiều trang.</ahelp>"

#: 06090000.xhp#hd_id3154472.26.help.text
msgctxt "06090000.xhp#hd_id3154472.26.help.text"
msgid "Border"
msgstr "Viền"

#: 06090000.xhp#par_id3154570.31.help.text
msgid ""
"<ahelp hid=\"SW:CHECKBOX:DLG_CONV_TEXT_TABLE:CB_BORDER\">Adds a border to the "
"table and the table cells.</ahelp>"
msgstr ""
"<ahelp hid=\"SW:CHECKBOX:DLG_CONV_TEXT_TABLE:CB_BORDER\">Thêm một đường viền "
"vào bảng, và vào các ô của bảng.</ahelp>"

