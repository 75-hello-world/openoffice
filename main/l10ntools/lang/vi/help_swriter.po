msgstr "Hàng"

#: 05110000.xhp#hd_id3149502.1.help.text
msgid "<link href=\"text/swriter/01/05110000.xhp\" name=\"Row\">Row</link>"
msgstr "<link href=\"text/swriter/01/05110000.xhp\" name=\"Hàng\">Hàng</link>"

