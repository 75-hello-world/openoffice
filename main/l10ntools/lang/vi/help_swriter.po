"<link href=\"text/swriter/main0210.xhp\" name=\"Tập tin > Xem thử trang\">Tập "
"tin > Xem thử trang</link>"

#: printer_tray.xhp#tit.help.text
msgid "Selecting printer paper trays"
msgstr "Chọn khay đựng giấy của máy in"

#: printer_tray.xhp#bm_id6609088.help.text
msgid ""
"<bookmark_value>selecting;paper trays</bookmark_value>      "
"<bookmark_value>paper tray selection</bookmark_value>"
msgstr ""
"<bookmark_value>lựa chọn;khay đựng giấy</bookmark_value><bookmark_value>chọn "
